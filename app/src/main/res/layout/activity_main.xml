<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black"
        android:padding="20dp">
    <TextView
            android:textSize="40sp"
            android:layout_width="366dp"
            android:layout_height="69dp"
            android:background="@color/white"
            android:id="@+id/tv_display"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="8dp"
            />
    <TextView
            android:textSize="30sp"
            android:background="@color/white"
            android:layout_width="370dp"
            android:layout_height="76dp"
            android:id="@+id/tv_resultado"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            android:layout_marginEnd="70dp"
            android:layout_marginStart="18dp"
            />
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/tableLayout">

        <TableRow android:layout_width="match_parent"
                  android:layout_height="match_parent"
        >
            <Button
                    android:layout_width="80sp"
                    android:layout_height="55sp"
                    android:id="@+id/bt_clear"
                    android:background="@drawable/circ_button"
                    android:text="C"
                    android:textSize="22dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/cornflowerblue"
            />

            <Button  android:layout_width="80sp"
                     android:layout_height="55sp"
                    android:id="@+id/bt_parent_l"
                    android:background="@drawable/circ_button"
                    android:text="( "
                     android:textSize="22dp"

                     android:textStyle="bold"
                    android:textColor="@color/cornflowerblue"
            />

            <Button android:layout_width="80sp"
                    android:layout_height="55sp"
                    android:id="@+id/bt_parent_r"
                    android:background="@drawable/circ_button"
                    android:text=")"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/cornflowerblue"
            />
            <Button android:layout_width="80sp"
                    android:layout_height="match_parent"
                    android:id="@+id/bt_cleaone"
                    android:background="@drawable/circ_button"
                    android:text="←"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/greenyellow"
            />
        </TableRow>
        <TableRow android:layout_width="match_parent"
                  android:layout_height="match_parent">
            <Button android:layout_width="80sp"
                    android:layout_height="55sp"
                    android:id="@+id/bt_siete"
                    android:background="@drawable/circ_button"
                    android:text="7"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
            />
            <Button android:layout_width="80sp"
                    android:layout_height="55sp"
                    android:id="@+id/bt_ocho"
                    android:background="@drawable/circ_button"
                    android:text="8"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
            />
            <Button android:layout_width="80sp"
                    android:layout_height="55sp"
                    android:id="@+id/bt_nueve"
                    android:background="@drawable/circ_button"
                    android:text="9"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
            />
            <Button android:layout_width="80sp"
                    android:layout_height="55sp"
                    android:id="@+id/bt_dividir"
                    android:background="@drawable/circ_button"
                    android:text="÷"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/greenyellow"
            />
        </TableRow>
        <TableRow android:layout_width="match_parent"
                  android:layout_height="match_parent">
            <Button android:layout_width="80sp"
                    android:layout_height="55sp"
                    android:id="@+id/bt_cuatro"
                    android:background="@drawable/circ_button"
                    android:text="4"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
            />
            <Button android:layout_width="80sp"
                    android:layout_height="55sp"
                    android:id="@+id/bt_cinco"
                    android:background="@drawable/circ_button"
                    android:text="5"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
            />
            <Button android:layout_width="80sp"
                    android:layout_height="55sp"
                    android:id="@+id/bt_seis"
                    android:background="@drawable/circ_button"
                    android:text="6"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
            />
            <Button android:layout_width="80sp"
                    android:layout_height="55sp"
                    android:id="@+id/bt_multiplicar"
                    android:background="@drawable/circ_button"
                    android:text="×"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/greenyellow"
            />
        </TableRow>
        <TableRow android:layout_width="match_parent"
                  android:layout_height="match_parent">
            <Button android:layout_width="80sp"
                    android:layout_height="55sp"
                    android:id="@+id/bt_uno"
                    android:background="@drawable/circ_button"
                    android:text="1"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
            />
            <Button android:layout_width="80sp"
                    android:layout_height="55sp"
                    android:id="@+id/bt_dos"
                    android:background="@drawable/circ_button"
                    android:text="2"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
            />
            <Button android:layout_width="80sp"
                    android:layout_height="55sp"
                    android:id="@+id/bt_tres"
                    android:background="@drawable/circ_button"
                    android:text="3"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
            />
            <Button android:layout_width="80sp"
                    android:layout_height="55sp"
                    android:id="@+id/bt_resta"
                    android:background="@drawable/circ_button"
                    android:text="-"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/greenyellow"
            />
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button android:layout_width="80sp"
                    android:layout_height="55sp"
                    android:id="@+id/bt_punto"
                    android:background="@drawable/circ_button"
                    android:text="."
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
            />
            <Button android:layout_width="40sp"
                    android:layout_height="55sp"
                    android:id="@+id/bt_cero"
                    android:background="@drawable/circ_button"
                    android:text="0"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
            />
            <Button android:layout_width="80sp"
                    android:layout_height="55sp"
                    android:id="@+id/bt_igual"
                    android:background="@drawable/circ_button"
                    android:text="="
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
            />
            <Button android:layout_width="80sp"
                    android:layout_height="55sp"
                    android:id="@+id/bt_sumar"
                    android:background="@drawable/circ_button"
                    android:text="+"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/greenyellow"
            />
        </TableRow>
    </TableLayout>


</LinearLayout>


